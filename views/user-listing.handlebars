<div class="container">
  {{#if listing}}
    <div class="row">
      <div class="col-8 offset-2">
        <div class="card mt-4">
          <div class="card-body">
              <h1>Your Tickets</h1>
              {{#each listingArray}}
              <br>
                <ul>
                  {{!-- <li><p><strong>User Name</strong>: {{this.user_name}}</p></li> --}}
                  <li><p><strong>Seat Number</strong>: {{this.seat_number}}</p></li>
                  <li><p><strong>Section Number</strong>: {{this.section_number}}</p></li>
                  <li><p><strong>Row Number</strong>: {{this.row_number}}</p></li>
                  <li><p><strong>Price</strong>: ${{this.price}}</p></li>
                </ul>
                <br> 
              {{/each}}

              <a href="/">‚Üê Back To Home</a>
          </div>
        </div>
      </div>
    </div>
  {{/if}}

  {{#if sellerEmail}}
  <div class="jumbotron">
      <form id="seller-email-form">
          <div class="form-email">
            <label for="name-input">Enter your email to view your listing:</label>
            <input class="form-control" id="user-email" placeholder="jon@gmail.com" type="text">
          </div>
      </form>  
  </div>
  {{/if}}

  {{#if buyerEmail}}
  <div class="jumbotron">
      <form id="buyer-email-form">
          <div class="form-email">
            <label for="name-input">Enter your email to recieve your reciept:</label>
            <input class="form-control" id="user-email" placeholder="jon@gmail.com" type="text">
          </div>
      </form>  
  </div>
  {{/if}}

</div>

